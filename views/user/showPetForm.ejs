<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head") %>
<body>
    <%- include("../partials/desktopnav") %>
    <main>
        <br>
        <br>
        <br>
        <br>
        <br>
        <h1>Add Your Pet</h1>
        <div class="post-card">
            <form action="/user/pets/new/add" method="POST" enctype="multipart/form-data">
                <div class="new-post-image-container">
                    <input id="pet-avatar-file" class="file-input hidden" type="file" name="attatchment" />
                    <label for="pet-avatar-file">
                        <i class="fas fa-camera-retro"></i>
                        <p class="filename-text">Pet Avatar</p>
                    </label>
                </div>
                <label class="labelNonSelect">Name:
                    <input name="name">
                </label>
                <label>Animal:
                    <select name="type">
                        <option value="bird">Bird</option>
                        <option value="cat">Cat</option>
                        <option value="chinchilla">Chinchilla</option>
                        <option value="dog">Dog</option>
                        <option value="duck">Duck</option>
                        <option value="eel">Eel</option>
                        <option value="ferret">Ferret</option>
                        <option value="fish">Fish</option>
                        <option value="frog">Frog</option>
                        <option value="gerbil">Gerbil</option>
                        <option value="goat">Goat</option>
                        <option value="guinea-pig">Guinea-Pig</option>
                        <option value="hamster">Hamster</option>
                        <option value="hedgehog">Hedgehog</option>
                        <option value="hermit-crab">Hermit-Crab</option>
                        <option value="horse">Horse</option>
                        <option value="lizard">Lizard</option>
                        <option value="mouse">Mouse</option>
                        <option value="rabbit">Rabbit</option>
                        <option value="rat">Rat</option>
                        <option value="sheep">Sheep</option>
                        <option value="sloth">Sloth</option>
                        <option value="snake">Snake</option>
                        <option value="sugar-glider">Sugar-Glider</option>
                        <option value="turtle">Turtle</option>
                    </select>
                </label>
                <label>Gender:
                    <select name="gender">
                        <option value="female">Female</option>
                        <option value="male">Male</option>
                        <option value="transgender">Transgender</option>
                        <option value="genderless">Genderless</option>
                    </select>
                </label>
                <input type="hidden" name="fileId" value="defaultpetpic.png">
                <input type="submit" value="Add Pet" class="edit">
            </form>
        </div>
        <div class="filler"></div>
        <div class="filler"></div>
        <div class="filler"></div>
        <div class="filler"></div>
        <%- include("../partials/mobilenav") %>
    </main>
</body>
</html>