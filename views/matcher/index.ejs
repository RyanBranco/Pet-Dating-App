<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head") %>
<body>
    <%- include("../partials/header") %>
    <main id="content">
        <div class="page">
            <% for(let i = posts.length - 1; i >= 0; i--) { %>
                <% let postId = posts[i]._id %>
                <% let awsURL = "https://pet-dating.s3-us-west-1.amazonaws.com/" %>
                <div class="postCard" id="viewPost">
                    <% if (posts[i].fileId) { %>
                        <img class="storyPic" src="<%= awsURL + posts[i].fileId %>">
                    <% } %>
                    <img class="profilePicSmall" src="<%= posts[i].user.avatar %>"> <p class="userInfo"><%= posts[i].user.name %> <small>about</small> <%= posts[i].pet %>: </p></p>
                    <p class="userStory"><%= posts[i].content %></p>
                    <hr>
                    <a class="actions" href="/post/view/<%= postId %>" id="viewC">View Comments</a>
                </div>
            <% } %> 
        </div>
    </main>
</body>
</html>